    <view class="page__bd">
        <view class="state">
          <view class="flag"> 用户注册</view>
          <view class="flag"> 手机绑定</view>
          <view class="flag"> 用户登录</view>
          <view class="flag"> 提交订单</view>
        </view>
       
    </view>
</view>
