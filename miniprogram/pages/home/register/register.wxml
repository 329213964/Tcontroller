<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="state">
          <view class="flag"> 用户注册</view>
          <view class="flag"> 手机绑定</view>
          <view class="flag"> </view>
          <view class="flag"> 完成注册</view>
        </view>
       
    </view>
</view>
<view class="pledgecont">
</view>
        

<view class="content">
  <view class="account">
    <view class="title">账号</view>
    <view class="num"><input bindinput="accountInput" class="ac" placeholder="用户名/邮箱/手机号" placeholder-style="color:#999999;"/></view>
  </view>
  <view class="hr"></view>
   <view class="account">
    <view class="title">密码</view>
    <view class="num"><input bindblur="pwdBlur" class="pwd" placeholder="请输入密码" password placeholder-style="color:#999999;"/></view>
  </view>
<view class="hr"></view>
   <view class="checkaccount">
    <view class="title">确认密码</view>
    <view class="num"><input bindblur="checkpwdBlur" class="checkpwd" placeholder="请再次输入密码" password placeholder-style="color:#999999;"/></view>
  </view>

  <!-- <view bindtap='login_href'>登录</view> -->
  <view class="hr"></view>
  <button class="btn" bindtap='register' type="primary">下一步</button>
</view>
<view>{{message}}</view>