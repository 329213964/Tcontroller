/* miniprogram/pages/home/guarantee/guarantee.wxss */
.content{
  margin-top: 40px;
}
.address{
   display: flex;
   flex-direction: row;
   padding-left: 20px;
   padding-top: 20px;
   padding-bottom: 10px;
   width: 90%;
}
.address-title{
  display: flex;
  flex-direction: row;
  vertical-align: text-top;
  justify-content: center;  
  align-items: center;
  font-weight: bold;
}

.address-text{
  font-size: 15px;
  margin-left: 20px;
  font-weight:normal;
  width: 80%;
  display: block;
  overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.hr{
  border: 1px solid #cccccc;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
  background-color: red;
}
.btn{
  width: 90%;
  margin-top:40px;
  color: #999999;
}
.text_box {
  background-color: white;
  width: 544rpx;
  border-radius: 10rpx;
  border: 1px solid #e9e9e9;
  padding-left: 28rpx;
  font-size: 30rpx;
  padding-top: 8rpx;
}
.text_box .weui-textarea {
  width: 528rpx;
  padding-left: 32rpx;
  padding: 6rpx 0;
  border-radius: 12rpx;
}
.info{
   display: flex;
   flex-direction: row;
   padding-left: 20px;
   padding-top: 20px;
   padding-bottom: 10px;
   width: 90%;
}
.fault-info{
   margin-right: 30px;
   font-weight: bold;
}
.f{
  display: flex;
}

.f-end{
  justify-content: flex-end;
}

.text-count-display{
  padding: 2%;
}

.textarea-count {
  border: 1px solid #ddd;
  border-radius: 5px;
}

.textarea-count textarea{
  width: 100%;
}
.btn1 {
  width: 80%;
  margin-top: 20rpx;
  background-color: burlywood;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 150px;
  left: 35px;
 

}



.address-div{
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  padding: 10px;
}

.address-div-click{
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  padding: 10px;
  background-color: #f8f8f8;
}

.arrow_right{
  float: right;
  margin-top: 5px;
  width: 10px;
  height: 20px;
}