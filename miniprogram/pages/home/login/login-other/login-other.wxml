<!--miniprogram/pages/home/login/login-other/login-other.wxml-->
<view class='top'>
  <view class='person'>
    <image src='/images/adm.png' class='adm-png'></image>
    <view class='name'>名字</view>
  </view>
</view>
<view class='bottom'>
  <view class='login'>
    <view class='login-text'>登录后该应用将获得以下权限</view>
    <view class='login-check'>
      <image src='/images/hook.png' class='hook-png'></image>
      <view class='check-text'>获得你的公开信息（昵称，头像等）</view>
    </view>
  </view>
    <button class='btn1' open-type="getUserInfo" bindtap='wxlogin'>确认登录
  </button>
</view>
