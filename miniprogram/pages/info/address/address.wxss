/* miniprogram/pages/info/address/address.wxss */
.hr{
  border: 1px solid #cccccc;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
  background-color: red;
}

.top{
  width: 100%;
  height: 80px;
  border: 1px solid #cccccc71;
  margin: 0 auto;
}

.top-click{
  width: 100%;
  height: 80px;
  border: 1px solid #cccccc71;
  margin: 0 auto;
  background-color: #f8f8f8;
}

.left{
  width: 100%;
  display: flex;
  flex-direction:row;
  float: left;
  margin-left: 30px;
}
.address{
  padding-top: 20px;
  width: 70%;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  font-weight: bold;
  font-size: 20px;
  color: #5a5a5a;
}
.addressdetaile{
  font-size: 17px;
}
.right{
   float: right;
   height: 25px;
   width: 25px;
   margin-top: 20px;
   margin-right: 30px;
   margin-left: 10%;
}
.add{
  opacity: 0.65;
  margin-left: 160px;
  margin-top: 20px;
  height: 35px;
  width: 35px;
}
.hr2{
  border: 1px solid #cccccc;
  opacity: 0.8;
  width: 90%;
  margin: 0 auto;
  background-color: red;
}